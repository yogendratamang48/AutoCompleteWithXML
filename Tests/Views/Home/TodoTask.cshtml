@model Tests.Models.ToDo

@{
    ViewBag.Title = "TodoTask";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
   
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.TaskNumber, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.TaskNumber, new { htmlAttributes = new { @class = "form-control", @Type="number" } })
                @Html.ValidationMessageFor(model => model.TaskNumber, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.TaskDescription, htmlAttributes: new { @class = "control-label" })

                @Html.EditorFor(model => model.TaskDescription, new { htmlAttributes = new { @class = "form-control", @style="width:50%" } })
                @Html.ValidationMessageFor(model => model.TaskDescription, "", new { @class = "text-danger" })
            </div>


            <div class="form-group col-md-4">

                <input type="submit" value="Create" class="btn btn-default" />


            </div>
        </div>
  

}

<div class="row" id="rowForShowingTasks">

</div>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    $(document).ready(function () {
        $('#rowForShowingTasks').load('@Url.Action("ShowTasks", "Home")');

    });

</script>
