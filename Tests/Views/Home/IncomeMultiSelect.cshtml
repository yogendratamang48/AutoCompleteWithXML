@model Tests.Models.MultiIncome

@{
    ViewBag.Title = "IncomeMultiSelect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IncomeMultiSelect</h2>
<link href="~/Content/select2.min.css" rel="stylesheet" />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MultiIncome</h4>
        <hr />

        <div class="form-group">
            <div class="col-md-10">
                @Html.ListBoxFor(model=>model.Incomes, (MultiSelectList)ViewBag.Incomes)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $("#Incomes").select2({
            placeholder: "Please Select Courses",
            maximumSelecionSize: 10,
            width: 300

        });
    });
</script>