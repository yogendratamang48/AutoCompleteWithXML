@model Tests.Models.BulkStudent

@{
    ViewBag.Title = "PostListOfStudents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Post List of Students</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <table class="table table-bordered">
            <tr><th>
                Name of Student</th>
            <th>Roll Number</th>
           
            @{
                for (int i = 0; i < 4; i++)
                {
                    <tr>
     
                        <td> @Html.TextBox("[" + i + "].StudentName",null, new { @class = "form-control" }) </td>
                        <td> @Html.TextBox("[" + i + "].StudentRoll",null, new { @class = "form-control" })</td>
                    </tr>
                }
            }
            

       
        </table>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
